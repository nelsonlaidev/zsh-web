{
  "name": "zsh-web",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Nelson Lai <me@nelsonlai.dev> (https://github.com/nelsonlaidev/)",
  "type": "module",
  "scripts": {
    "build": "next build --turbo",
    "check": "pnpm lint && pnpm type-check && pnpm format:check && pnpm check:spelling && pnpm check:knip",
    "check:knip": "knip",
    "check:spelling": "cspell \"**\" --no-progress --no-summary --no-must-find-files --unique",
    "clean": "rm -rf .next",
    "cz": "cross-env NODE_OPTIONS='--experimental-transform-types --disable-warning ExperimentalWarning' czg",
    "dev": "next dev --turbo",
    "format:check": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "format:write": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "preinstall": "npx --yes only-allow pnpm",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "prepare": "husky",
    "start": "next start",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{mjs,js,ts,tsx}": "eslint --fix",
    "**/*": [
      "prettier --write --ignore-unknown",
      "pnpm check:spelling"
    ]
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "^0.13.8",
    "@zenfs/core": "^2.4.0",
    "@zenfs/dom": "^1.2.4",
    "arg": "^5.0.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.18",
    "kerium": "^1.3.6",
    "next": "15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "uid": "^2.0.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@nelsonlaidev/eslint-config": "^1.0.0",
    "@nelsonlaidev/prettier-config": "^0.1.0",
    "@nelsonlaidev/typescript-config": "^0.0.3",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "cross-env": "^10.0.0",
    "cspell": "^9.2.1",
    "czg": "^1.12.0",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "knip": "^5.63.1",
    "lint-staged": "^16.1.6",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=22"
  }
}
